  "parameters": {
    "accountName": {
      "type": "string",
      "metadata": {
        "description": "The name of the Cosmos DB account"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "The location for the Cosmos DB account"
      }
    },
    "tags": {
      "type": "object",
      "defaultValue": {},
      "metadata": {
        "description": "Tags for the resources"
      }
