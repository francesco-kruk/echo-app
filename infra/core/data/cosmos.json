  "outputs": {
    "endpoint": {
      "type": "string",
      "value": "[reference(resourceId('Microsoft.DocumentDB/databaseAccounts', parameters('accountName')), '2024-11-15').documentEndpoint]"
    },
    "accountName": {
      "type": "string",
      "value": "[parameters('accountName')]"
    },
    "databaseName": {
      "type": "string",
      "value": "[parameters('databaseName')]"
    },
    "decksContainerName": {
      "type": "string",
      "value": "[parameters('decksContainerName')]"
    },
    "cardsContainerName": {
      "type": "string",
      "value": "[parameters('cardsContainerName')]"
    }
  }
